{
    "name": "zill",
    "version": "2.0.14",
    "description": "UI library to build web based tools.",
    "type": "module",
    "main": "src/index.js",
    "source": "src/index.js",
    "module": "dist/zill.js",
    "types": "./dist/zill.d.ts",
    "css": "dist/zill.css",
    "scripts": {
        "test": "echo Ok",
        "requirements": "yarn global add shx parcel less",
        "clean-css": "shx mkdir -p dist && shx rm -f dist/*.css && shx rm -f dist/*.png",
        "clean-js": "shx mkdir -p dist && shx rm -f dist/*.js",
        "build-css": "yarn clean-css && parcel build less/index.less --target css --no-cache",
        "build-js": "yarn clean-js && parcel build --target module --no-cache",
        "build": "yarn tsdoc && yarn build-css && yarn build-js",
        "tsdoc": "node ./scripts/tsdoc.js ./src/index.js ./dist/zill.d.ts",
        "deploy": "yarn build && node ./scripts/deploy.js",
        "commit": "node ./scripts/commit.js"
    },
    "browserslist": "since 2020-01",
    "targets": {
        "css": {
            "optimize": true,
            "sourceMap": false
        }
    },
    "files": [
        "dist/",
        "LICENSE"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rsthn/zill.git"
    },
    "author": "RedStar Technologies",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rsthn/zill/issues"
    },
    "homepage": "https://github.com/rsthn/zill#readme",
    "devDependencies": {
        "@parcel/transformer-less": "^2.3.2"
    },
    "dependencies": {
        "riza": "^1.1.1"
    }
}